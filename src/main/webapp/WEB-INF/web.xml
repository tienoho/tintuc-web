<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <display-name>Website Tin Tuc</display-name>
    <!--Khi deloy website lên sẽ trỏ đến file index.jsp đầu tiên-->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>login</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>register</servlet-name>
        <jsp-file>/registered.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Categorya</servlet-name>
        <jsp-file>/category.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Categorya</servlet-name>
        <url-pattern>/Category/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Search</servlet-name>
        <jsp-file>/search.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Search</servlet-name>
        <url-pattern>/Search/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Tag</servlet-name>
        <jsp-file>/tag.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Tag</servlet-name>
        <url-pattern>/tag/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CategoryPost</servlet-name>
        <servlet-class>vn.haui.web.controller.PostServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryPost</servlet-name>
        <url-pattern>/Category/post/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ConnectorServlet</servlet-name>
        <servlet-class>com.ckfinder.connector.ConnectorServlet</servlet-class>
        <init-param>
            <param-name>XMLConfig</param-name>
            <param-value>/WEB-INF/config.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConnectorServlet</servlet-name>
        <url-pattern>
            /ckfinder/core/connector/java/connector.java
        </url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/errors/error4.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/errors/error5.jsp</location>
    </error-page>

    <filter>
        <filter-name>ConfigFilter</filter-name>
        <filter-class>vn.haui.web.filter.filterConfig</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>ConfigFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>PostFilter</filter-name>
        <filter-class>vn.haui.web.filter.filterPost</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>PostFilter</filter-name>
        <url-pattern>/post/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>CategoryFilter</filter-name>
        <filter-class>vn.haui.web.filter.filterCategory</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CategoryFilter</filter-name>
        <url-pattern>/Category/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>vn.haui.web.filter.filterAdmin</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/Admincp/*</url-pattern>
    </filter-mapping>
    <!--cấu hình kết nối-->
    <env-entry>
        <env-entry-name>url</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>localhost</env-entry-value>
    </env-entry>
    <env-entry>
        <env-entry-name>DBname</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>tintuc</env-entry-value>
    </env-entry>
    <env-entry>
        <env-entry-name>user</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>root</env-entry-value>
    </env-entry>
    <env-entry>
        <env-entry-name>password</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value></env-entry-value>
    </env-entry>
</web-app>